<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorClear"
    tools:context=".single.SingleSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorBasic">
        <ImageView
            android:id="@+id/button_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="20dp"
            android:src="@drawable/left_arrow"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginRight="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:text="SIMEN"/>

    </LinearLayout>

    <ScrollView android:id="@+id/main_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다중 문자 치환 암호화"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="70dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="30dp"/>

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="100dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/open_lock" />

                    <EditText
                        android:id="@+id/text_before"
                        android:layout_width="250dp"
                        android:layout_height="350dp"
                        android:background="@drawable/input_layout1"
                        android:hint="평문을 입력하시오."
                        android:padding="10dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/key" />

                    <EditText
                        android:id="@+id/text_key"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:background="@drawable/input_layout1"
                        android:hint="암호키를 입력하시오."
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="15dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="예) assassinator" />


                <Button
                    android:id="@+id/button_run"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="Run" />
            </LinearLayout>


            <TableLayout
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="5"
                android:background="@drawable/table_layout3">
                <TableRow
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5">
                    <TextView
                        android:id="@+id/table_a"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_b"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_c"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_d"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_e"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5">
                    <TextView
                        android:id="@+id/table_f"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_g"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_h"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_i"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_j"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5">
                    <TextView
                        android:id="@+id/table_k"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_l"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_m"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_n"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_o"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5">
                    <TextView
                        android:id="@+id/table_p"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_q"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_r"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_s"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_t"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                </TableRow>
                <TableRow
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5">
                    <TextView
                        android:id="@+id/table_u"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_v"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_w"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_x"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/table_y"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_layout2"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_weight="1"/>
                </TableRow>

            </TableLayout>


            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/lock" />

                    <EditText
                        android:id="@+id/text_after"
                        android:layout_width="250dp"
                        android:layout_height="350dp"
                        android:background="@drawable/input_layout1"
                        android:hint="암호문"
                        android:gravity="top"
                        android:padding="10dp"
                        android:textSize="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="100dp"
                    android:paddingLeft="60dp">
                    <Button
                        android:id="@+id/button_copy"
                        android:layout_width="80dp"
                        android:layout_height="45dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:textSize="12dp"
                        android:text="복사" />
                    <Button
                        android:id="@+id/button_reverse"
                        android:layout_width="160dp"
                        android:layout_height="45dp"
                        android:layout_gravity="right"
                        android:textSize="12dp"
                        android:text="해당 암호문 복호화하기" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
