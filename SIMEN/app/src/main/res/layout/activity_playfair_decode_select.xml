<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".single.SingleSelectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorBasic">
        <ImageView
            android:id="@+id/button_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="20dp"
            android:src="@drawable/left_arrow"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginRight="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"
            android:text="SIMEN"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다중 문자 치환 복호화"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="25dp"/>

    <LinearLayout
        android:id="@+id/button_short"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/button_layout2"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/short_text"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="단문"
            android:layout_marginLeft="0dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/button_long"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/button_layout2"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/long_text"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="장문"
            android:layout_marginLeft="0dp"/>

    </LinearLayout>

</LinearLayout>